<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mapBackground"
    tools:context="nctu.cs.cgv.itour.fragment.MapFragment">

    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/floating_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:floatingSearch_close_search_on_keyboard_dismiss="true"
        app:floatingSearch_leftActionMode="showHamburger"
        app:floatingSearch_searchBarMarginLeft="8dp"
        app:floatingSearch_searchBarMarginRight="8dp"
        app:floatingSearch_searchBarMarginTop="8dp"
        app:floatingSearch_searchHint="Search..."
        app:floatingSearch_showSearchKey="false"
        app:floatingSearch_suggestionsListAnimDuration="250" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menu_add"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_gps_fixed_blue_24dp" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/menu_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:fab_addButtonColorNormal="@color/colorLocation"
        app:fab_addButtonColorPressed="@color/colorLocation"
        app:fab_addButtonPlusIconColor="@color/white"
        app:fab_expandDirection="left">
        <!--fab:fab_labelStyle="@style/MenuLabel">-->

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_edit_black_24dp"
            app:fab_size="mini"/>
            <!--fab:fab_title="新增打卡" />-->

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_mic_black_24dp"
            app:fab_size="mini"/>
            <!--fab:fab_title="新增音訊" />-->

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>
