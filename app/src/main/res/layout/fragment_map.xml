<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mapBackground"
    tools:context="nctu.cs.cgv.itour.fragment.MapFragment">

    <FrameLayout
        android:id="@+id/touristmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menu_add"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:elevation="8dp"
        android:src="@drawable/ic_gps_fixed_blue_24dp"
        app:backgroundTint="@color/md_white_1000" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/menu_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="8dp"
        app:fab_addButtonColorNormal="@color/gps_marker_color"
        app:fab_addButtonColorPressed="@color/gps_marker_color"
        app:fab_addButtonPlusIconColor="@color/md_white_1000"
        app:fab_expandDirection="left">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image_black_24dp"
            app:backgroundTint="@color/md_white_1000" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mic_black_24dp"
            app:backgroundTint="@color/md_white_1000" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <LinearLayout
        android:id="@+id/gps_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="32px"
            android:layout_height="32px"
            android:src="@drawable/triangle" />

        <ImageView
            android:layout_width="48px"
            android:layout_height="48px"
            android:src="@drawable/circle_gps" />

    </LinearLayout>

</RelativeLayout>
