<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <View
        android:id="@+id/scrim_status_bar"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@drawable/scrim" />

    <View
        android:id="@+id/scrim_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/scrim"
        android:rotation="180" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_compass"
        android:layout_alignStart="@+id/btn_compass"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_add_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_compass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_nav"
        android:layout_alignStart="@+id/btn_nav"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_navigation_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_gps_fixed_white_24dp" />


</RelativeLayout>
